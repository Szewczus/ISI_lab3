<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ComboBox?>
<VBox fx:controller="Controller" xmlns:fx="http://javafx.com/fxml" prefHeight="431.0" prefWidth="409.0" spacing="20.0" >
    <children>
        <HBox spacing="20">
            <children>
                <Label style="-fx-font: NORMAL 15 Tahoma;" text="Wybór matrycy"   GridPane.columnIndex="0" GridPane.rowIndex="0" minWidth="120"/>
                <ComboBox style="-fx-font: NORMAL 15 Tahoma;"  promptText="choose"  GridPane.columnIndex="1" GridPane.rowIndex="0"  fx:id="matrixCombo"/>
                <Button style="-fx-font: NORMAL 15 Tahoma;" text="Lista laptopów z określoną matrycą"   GridPane.columnIndex="2" GridPane.rowIndex="0" fx:id="matrixButton"/>

                <Label style="-fx-font: NORMAL 15 Tahoma;" text="Wybór producenta"   GridPane.columnIndex="0" GridPane.rowIndex="0" minWidth="120"/>
                <ComboBox style="-fx-font: NORMAL 15 Tahoma;"  promptText="choose"  GridPane.columnIndex="1" GridPane.rowIndex="0"  fx:id="producentCombo"/>
                <Button style="-fx-font: NORMAL 15 Tahoma;" text="Liczba laptopów producenta"   GridPane.columnIndex="2" GridPane.rowIndex="0" fx:id="producentButton"/>
            </children>
        </HBox>

        <TableView fx:id="tableView" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-font: NORMAL 10 Tahoma;">
        </TableView>


        <GridPane fx:id="miejsce_na_dane">
        </GridPane>

        <GridPane fx:id="miejsce_na_przyciski">
            <children>
                <Button style="-fx-font: NORMAL 15 Tahoma;" text="Dodaj nowy wiersz"   GridPane.columnIndex="0" GridPane.rowIndex="4" fx:id="dodaj"/>
            </children>
        </GridPane>
    </children>

</VBox>

